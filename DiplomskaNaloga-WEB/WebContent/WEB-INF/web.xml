<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>DiplomskaNaloga-WEB</display-name>


	<context-param>
		<param-name>FilesFolder</param-name>
		<param-value>/files</param-value>
	</context-param>

	<security-constraint>
		<!-- <web-resource-collection> -->
		<!-- <web-resource-name>administrator</web-resource-name> -->
		<!-- <url-pattern>/rest/*</url-pattern> -->
		<!-- </web-resource-collection> -->
		<web-resource-collection>
			<web-resource-name>administrator</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-role>
		<description>The single application role</description>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>get_program</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>add_program</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>get_profesor</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>add_profesor</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>get_zavod</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>add_zavod</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>get_vrstastudija</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>add_vrstastudija</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>get_diplomskadela</role-name>
	</security-role>
	<security-role>
		<description>The single application role</description>
		<role-name>add_diplomskadela</role-name>
	</security-role>
	
<!-- 	<welcome-file-list> -->
<!-- 		<welcome-file>admin.html</welcome-file> -->
<!-- 	</welcome-file-list> -->

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.html</form-login-page>
			<form-error-page>/login-error.html</form-error-page>
		</form-login-config>
	</login-config>

	<servlet-mapping>
	    <servlet-name>javax.ws.rs.core.Application</servlet-name>
	    <url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/index.html</location>
	</error-page>
	
	<error-page>
		<error-code>403</error-code>
		<location>/index.html</location>
	</error-page>
</web-app>